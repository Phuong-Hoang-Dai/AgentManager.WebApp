@model IEnumerable<AgentManager.WebApp.Models.Data.Agent>

@{
    ViewData["Title"] = "Quản lý công nợ ";
    ViewData["Action"] = "Danh sách đại lý";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<section class="content">

    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AgentName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReceptionDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.District.DistrictName)
                        </th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AgentName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReceptionDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.District.DistrictName)
                            </td>
                            <td class="project-actions text-right">
                                <a asp-action="Details" asp-route-id="@item.AgentId" class="btn btn-primary btn-sm">
                                    <i class="fas fa-folder"></i>
                                    Xem
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>