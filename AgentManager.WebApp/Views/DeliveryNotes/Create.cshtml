@model AgentManager.WebApp.Models.Data.DeliveryNote
@using Microsoft.AspNetCore.Identity
@using AgentManager.WebApp.Models.Data
@inject SignInManager<Staff> SignInManager
@inject UserManager<Staff> UserManager
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    ViewData["Action"] = "Thêm phiếu xuất hàng";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<form asp-action="Create" class="content">
    <div class="row">
        <div class="col">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Thêm phiếu xuất</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AgentId" class="control-label"></label>
                        <select asp-for="AgentId" class="form-control" asp-items="ViewBag.AgentId"></select>
                    </div>
                    <input name="StaffId" asp-for="StaffId" type="hidden" value="@UserManager.GetUserId(User)" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Tạo và thêm sản phẩm" class="btn btn-success float-right">
        </div>
    </div>
</form>
